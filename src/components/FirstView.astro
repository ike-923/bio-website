---
import { Image } from 'astro:assets';
import image1 from '../assets/6.jpg';
import image2 from '../assets/9.jpg';
import image3 from '../assets/2.jpg';
import image4 from '../assets/14.jpg';
import image5 from '../assets/19.jpg';
---

  <div class="container relative min-h-[300px] lg:min-h-[70vh]">
    <!-- 左側のコンテンツ -->
    <div class="w-full lg:w-[45%] flex-col justify-center items-end px-4 lg:pl-16 z-10 relative py-6 md:py-8 lg:py-0 mt-12 lg:mt-16">
      <!-- クリニック名 -->
      <div class="mb-3 lg:mb-5">
        <p class="text-xs lg:text-sm tracking-widest mb-1 text-gray-600">acupuncture</p>
        <h1 class="text-3xl lg:text-4xl font-mincho font-light tracking-wider leading-relaxed text-[#0059d6]">
          鍼灸院<br class="hidden lg:block">　BiO
        </h1>
      </div>
      
      <!-- キャッチコピー -->
      <div class="absolute lg:top-70 lg:left-50 mt-2 lg:mt-6">
        <p class="text-lg lg:text-xl font-mincho mb-3 lg:mb-4 tracking-wider">整う。</p>
        <h2 class="text-2xl lg:text-3xl font-mincho font-light text-[#0059d6] mb-3 lg:mb-8 tracking-wider leading-relaxed">
          Be in Order
        </h2>
        <p class="text-sm lg:text-base leading-relaxed tracking-wider text-gray-700 font-mincho">
          あなたの心と身体に寄り添う鍼灸院
        </p>
      </div>
    </div>
    
    <!-- 右側の画像部分 -->
    <div class="w-full lg:w-[80%] h-[300px] md:h-[400px] lg:h-[70vh] absolute right-0 top-0">
      <div class="slideshow-container w-full h-full">
        <div class="slide active">
          <Image
            src={image1}
            alt="スライド1"
            class="w-full h-full object-cover"
            width={1200}
            height={800}
          />
        </div>
        <div class="slide">
          <Image
            src={image2}
            alt="スライド2"
            class="w-full h-full object-cover"
            width={1200}
            height={800}
          />
        </div>
        <div class="slide">
          <Image
            src={image3}
            alt="スライド3"
            class="w-full h-full object-cover"
            width={1200}
            height={800}
          />
        </div>
        <div class="slide">
          <Image
            src={image4}
            alt="スライド4"
            class="w-full h-full object-cover"
            width={1200}
            height={800}
          />
        </div>
        <div class="slide">
          <Image
            src={image5}
            alt="スライド5"
            class="w-full h-full object-cover"
            width={1200}
            height={800}
          />
        </div>
      </div>
      <!-- 画像の上にグラデーションオーバーレイを追加 -->
      <div class="absolute inset-0 bg-gradient-to-b lg:bg-gradient-to-r from-white via-white/90 lg:via-white/50 to-transparent pointer-events-none"></div>
    </div>
  </div>

<style>
  .slideshow-container {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }
  
  .slide {
    position: absolute;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 2s ease-in-out;
  }
  
  .slide.active {
    opacity: 1;
  }

  .slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .font-mincho {
    font-family: 'Shippori Mincho', serif;
  }

  @media (max-width: 1024px) {
    .container {
      display: flex;
      flex-direction: column;
      position: relative;
      padding-bottom: 0.5rem;
    }
  }

  @media (max-width: 640px) {
    .container {
      padding-bottom: 0.25rem;
    }
  }
</style>

<script>
  // スライドショーの制御
  document.addEventListener('DOMContentLoaded', function() {
    const slides = document.querySelectorAll('.slide');
    const slideCount = slides.length;
    let currentSlide = 0;
    
    function showSlides() {
      slides[currentSlide].classList.remove('active');
      currentSlide = (currentSlide + 1) % slideCount;
      slides[currentSlide].classList.add('active');
    }
    
    setInterval(showSlides, 5000);
  });
</script> 