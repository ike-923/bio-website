      <nav class="flex flex-col space-y-4">
        <a href="/" class="block py-2 text-gray-700 hover:text-[#0059d6] transition-colors relative nav-link">ホーム</a>
        <a href="/first-time" class="block py-2 text-gray-700 hover:text-[#0059d6] transition-colors relative nav-link">初めての方へ</a>
        <a href="/menu-detail" class="block py-2 text-gray-700 hover:text-[#0059d6] transition-colors relative nav-link">メニュー</a>
        <a href="/#faq" class="block py-2 text-gray-700 hover:text-[#0059d6] transition-colors relative nav-link">よくある質問</a>
        <a href="/#access" class="block py-2 text-gray-700 hover:text-[#0059d6] transition-colors relative nav-link">アクセス</a>
      </nav>
      
      <!-- 予約・SNSボタン -->
      <div class="flex flex-col space-y-3 mt-6 pb-4">
        <a href="https://www.instagram.com/bio_miyazaki_shinkyu/" target="_blank" class="flex items-center justify-center text-gray-700 px-4 py-3 rounded-full hover:text-[#E4405F] transition-colors text-sm border border-gray-200">
