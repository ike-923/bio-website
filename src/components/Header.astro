---
import { Image } from 'astro:assets';
import lineIcon from '../assets/LINE_Brand_icon.png';
---
<header class="fixed w-full z-50 bg-white/95 backdrop-blur-md shadow-sm">
    
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    
    <!-- ロゴと院名 -->
    <a href="/" class="flex items-center gap-3">
        <img src="/images/bio_logo-2.png" alt="鍼灸院 BiO" width="80" height="80" class="p-1" id="logo-img">
      <div class="hidden lg:flex gap-2 items-start">
        <span class="text-sm font-light tracking-widest text-gray-800">鍼灸院</span>
        <span class="text-3xl font-light tracking-widest text-[#0059d6]">BiO</span>
      </div>
    </a>
    
    <!-- デスクトップナビゲーション -->
    <nav class="hidden lg:flex items-center space-x-8">
      <a href="/" class="text-gray-700 hover:text-[#0059d6] transition-colors relative nav-link">ホーム</a>
      <a href="/first-time" class="text-gray-700 hover:text-[#0059d6] transition-colors relative nav-link">初めての方へ</a>
      <a href="/menu-detail" class="text-gray-700 hover:text-[#0059d6] transition-colors relative nav-link">メニュー</a>
      <a href="/#faq" class="text-gray-700 hover:text-[#0059d6] transition-colors relative nav-link">よくある質問</a>
      <a href="/#contact" class="text-gray-700 hover:text-[#0059d6] transition-colors relative nav-link">アクセス</a>
    </nav>

    <!-- 予約・SNSボタン（PCのみ） -->
    <nav class="hidden lg:flex items-center space-x-2">
      <a href="https://carecle.com/booking/shinkyu_BiO" target="_blank" class="flex items-center justify-center bg-[#00479D] text-white px-4 py-2 rounded-full hover:bg-[#0055bd] transition-colors text-sm">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
