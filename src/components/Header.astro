        <Image
          src={lineIcon}
          alt="LINE"
          class="w-4 h-4 mr-2"
          width={16}
          height={16}
        />
        <span class="tracking-wider">LINE</span>
      </a>
      <a href="https://www.instagram.com/bio_miyazaki_shinkyu/" target="_blank" class="flex items-center justify-center text-gray-700 px-1 py-1 rounded-full hover:text-[#E4405F] transition-colors text-sm border border-gray-100">
